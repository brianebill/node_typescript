{
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2018",                          
    "module": "commonjs",                    
    "lib": ["es5"],                     
    "allowJs": true,                         
    "strict": false,
    "outDir": "build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": ".",
    "noEmitOnError": true,
    "baseUrl": "./src",
    "paths": {
      "services/*": ["services/*"]
    }
  }
}
